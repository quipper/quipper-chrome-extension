<form class="p-a">

  <div class="m-b">
    <svg class="icon form-control-icon"><use xlink:href="#common-account"></use></svg>
    <input type="text" placeholder="Username or Email" class="form-control" name="username" />
  </div>

  <div class="m-b">
    <svg class="icon form-control-icon"><use xlink:href="#common-password"></use></svg>
    <input type="password" placeholder="Password" class="form-control" name="password" />
  </div>

  <div class="alert alert-danger m-b">
    Could not log in. Please check your username and password.
  </div>

  <div>
    <button type="submit" class="btn btn-primary">Log in</button>
  </div>
</form>
